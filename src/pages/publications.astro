---
import Layout from '../layouts/Layout.astro';
import PublicationItem from '../components/PublicationItem.astro';
import { getCollection } from 'astro:content';

const allPapers = (await getCollection('publications')).sort((a, b) => b.data.year - a.data.year);
const years = [...new Set(allPapers.map(p => p.data.year))];
---

<Layout title="Publications">
  <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Publications</h1>
      <p class="text-lg text-gray-600">
        A collection of our research papers, conference proceedings, and journal articles.
      </p>
    </div>

    <div class="space-y-12">
      {years.map(year => (
        <div class="relative">
          <div class="sticky top-20 z-10 bg-white/90 backdrop-blur py-2 mb-4 border-b border-gray-100">
            <h2 class="text-2xl font-bold text-gray-900">{year}</h2>
          </div>
          <div class="space-y-2">
            {allPapers.filter(p => p.data.year === year).map(paper => (
              <PublicationItem entry={paper} />
            ))}
          </div>
        </div>
      ))}
      
      {allPapers.length === 0 && (
        <p class="text-gray-500 text-center py-12">No publications found. Add markdown files to src/content/publications/</p>
      )}
    </div>
  </div>
</Layout>

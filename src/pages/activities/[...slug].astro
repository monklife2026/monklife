---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { Calendar, ArrowLeft } from 'lucide-react';

export async function getStaticPaths() {
  const activities = await getCollection('activities');
  return activities.map(activity => ({
    params: { slug: activity.id.replace(/\.[^/.]+$/, "") },
    props: { activity },
  }));
}

const { activity } = Astro.props;
const { Content } = await render(activity);
---

<Layout title={activity.data.title}>
  <article class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <a href="/activities" class="inline-flex items-center text-sm text-gray-500 hover:text-blue-600 mb-8 transition-colors">
      <ArrowLeft className="w-4 h-4 mr-1" /> Back to Activities
    </a>

    <header class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{activity.data.title}</h1>
      
      <div class="flex items-center gap-4 text-gray-500 mb-8">
        <div class="flex items-center gap-2">
          <Calendar className="w-4 h-4" />
          <time>{activity.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' })}</time>
        </div>
      </div>

      {activity.data.cover && (
        <div class="w-full h-64 sm:h-96 rounded-2xl overflow-hidden bg-gray-100 mb-8">
          <img src={activity.data.cover.src} alt={activity.data.title} class="w-full h-full object-cover" />
        </div>
      )}
      
      {activity.data.description && (
        <p class="text-xl text-gray-600 leading-relaxed border-l-4 border-blue-500 pl-4 italic">
          {activity.data.description}
        </p>
      )}
    </header>

    <div class="prose prose-lg prose-blue max-w-none text-gray-700">
      <Content />
    </div>
  </article>
</Layout>

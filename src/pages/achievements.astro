---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Calendar } from 'lucide-react';
import { getCollection } from 'astro:content';

const stories = (await getCollection('stories')).sort((a, b) => {
  const dateA = new Date(a.data.date || 0);
  const dateB = new Date(b.data.date || 0);
  return dateB.valueOf() - dateA.valueOf();
});
---

<Layout title="Achievements">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <div class="mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4" data-i18n-key="stories.title">Stories</h1>
      <p class="text-lg text-gray-600" data-i18n-key="stories.subtitle">
        Latest stories and updates.
      </p>
    </div>

    <!-- Stories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {stories.map(story => {
        const slug = story.id.replace(/\.[^/.]+$/, "");
        return (
          <a href={`/stories/${slug}`} class="group bg-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-lg transition-all block">
            {story.data.cover && (
              <div class="h-56 overflow-hidden bg-gray-100 relative">
                 <Image 
                  src={story.data.cover} 
                  alt={story.data.title} 
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  quality={80}
                  format="webp"
                  width={600}
                />
                 <div class="flex items-center text-white/90 text-sm absolute bottom-4 left-4 bg-black/30 px-3 py-1 rounded-full backdrop-blur-sm">
                    <Calendar className="w-4 h-4 mr-2" />
                    <time>{story.data.date.toISOString().split('T')[0]}</time>
                 </div>
              </div>
            )}
            <div class="p-6">
              <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">{story.data.title}</h3>
              <p class="text-gray-600 text-sm line-clamp-3">{story.data.description}</p>
            </div>
          </a>
        );
      })}
      {stories.length === 0 && (
         <div class="col-span-full text-center py-12 bg-gray-50 rounded-xl">
            <p class="text-gray-500" data-i18n-key="stories.noStories">No stories added yet.</p>
         </div>
      )}
    </div>
  </div>
</Layout>

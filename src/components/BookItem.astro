---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'publications'> | CollectionEntry<'books'>;
}

const { entry } = Astro.props;
const { title, authors, year, venue, links, cover, badges } = entry.data;
---

<div class="group bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 flex flex-col h-full">
  <div class="relative aspect-[3/4] overflow-hidden bg-gray-100">
    {cover ? (
      <Image 
        src={cover} 
        alt={title} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center text-gray-400 bg-gray-50">
        <span class="text-sm">No Cover</span>
      </div>
    )}
    
    {/* Badges Overlay */}
    {badges && badges.length > 0 && (
      <div class="absolute top-2 right-2 flex flex-col gap-1 items-end">
        {badges.map(badge => (
          <span class={`px-2 py-1 text-xs font-bold rounded shadow-sm backdrop-blur-md
            ${badge.type === 'gold' ? 'bg-yellow-100/90 text-yellow-700 border border-yellow-200' : 
              badge.type === 'blue' ? 'bg-blue-100/90 text-blue-700 border border-blue-200' : 
              'bg-gray-100/90 text-gray-700 border border-gray-200'}`}>
            {badge.text}
          </span>
        ))}
      </div>
    )}
  </div>

  <div class="p-5 flex flex-col flex-grow">
    <div class="mb-4">
      <h3 class="text-lg font-bold text-gray-900 leading-tight group-hover:text-blue-600 transition-colors mb-2">
        {title}
      </h3>
      <p class="text-sm text-gray-600 leading-relaxed">
        {authors.join(', ')}
      </p>
    </div>

    <div class="mt-auto pt-4 border-t border-gray-50 flex items-center justify-between text-sm">
      <div class="flex items-center gap-2 text-gray-500">
        <span class="font-medium text-gray-900">{venue}</span>
        <span>â€¢</span>
        <time>{year}</time>
      </div>
      
      {links && (links.website || links.pdf) && (
        <div class="flex gap-2">
          {links.website && (
            <a href={links.website} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 font-medium">
              Website
            </a>
          )}
          {links.pdf && (
            <a href={links.pdf} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 font-medium">
              PDF
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</div>
